# ===========================================
# Jar4 Environment Variables
# Copy to .env and fill with your credentials
# ===========================================

# -------------------------------------------
# AI Provider (set at least one)
# -------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxxxx
OPENAI_API_KEY=sk-xxxxx
GEMINI_API_KEY=xxxxx

# -------------------------------------------
# Gateway Configuration
# -------------------------------------------
# Auth token for API access (recommended for production)
JAR4_GATEWAY_TOKEN=your_secure_token_here
# Port for the gateway (auto-set by Railway)
# PORT=3000

# -------------------------------------------
# Telegram
# -------------------------------------------
TELEGRAM_BOT_TOKEN=123456:ABC-xxxxx

# -------------------------------------------
# Discord
# -------------------------------------------
DISCORD_BOT_TOKEN=xxxxx
DISCORD_APPLICATION_ID=xxxxx

# -------------------------------------------
# Slack
# -------------------------------------------
SLACK_BOT_TOKEN=xoxb-xxxxx
SLACK_SIGNING_SECRET=xxxxx

# -------------------------------------------
# WhatsApp (Twilio)
# -------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Must be a WhatsApp-enabled Twilio number, prefixed with whatsapp:
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101

# -------------------------------------------
# Line
# -------------------------------------------
LINE_CHANNEL_SECRET=xxxxx
LINE_CHANNEL_ACCESS_TOKEN=xxxxx

# -------------------------------------------
# Signal
# -------------------------------------------
SIGNAL_PHONE_NUMBER=+1234567890

# -------------------------------------------
# Nostr
# -------------------------------------------
NOSTR_PRIVATE_KEY=nsec1xxxxx
