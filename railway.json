{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm build && pnpm ui:install && pnpm ui:build"
  },
  "deploy": {
    "startCommand": "node dist/entry.js gateway run --port $PORT --bind 0.0.0.0 --allow-unconfigured",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
